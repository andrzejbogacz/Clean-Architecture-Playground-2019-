<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="5dp"
                                                   android:background="@drawable/auth_background"
                                                   tools:ignore="ExtraText">
    <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginTop="8dp">

        <Button
                android:id="@+id/signInGoogle"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:textAlignment="center"
                android:background="@drawable/shape_login_button"
                android:text="@string/fui_sign_in_with_google"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" android:textAllCaps="false" android:textStyle="normal"/>

        <com.google.android.gms.common.SignInButton
                android:visibility="gone"
                android:background="@drawable/shape_login_button"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
        </com.google.android.gms.common.SignInButton>
    </FrameLayout>
    <FrameLayout
            android:id="@+id/FrameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/FrameLayout1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">

        <com.facebook.login.widget.LoginButton
                android:visibility="visible"
                android:id="@+id/signInFacebook"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/shape_login_button"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textSize="14sp"/>
    </FrameLayout>
    <Button
            android:text="Button"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="307dp"
            android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>