<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_marginEnd="32dp"
                                                   android:id="@+id/constraint"
		>


	<TextView
			android:text="@string/pl_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/nickname_dialog_cancel"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toStartOf="@+id/nickname_dialog_confirm"
			android:layout_marginEnd="32dp"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="24dp"
			app:layout_constraintTop_toBottomOf="@+id/numberPicker_age_choice"
			app:layout_constraintStart_toEndOf="@+id/numberPicker_age_choice"
			android:layout_marginStart="8dp"
			android:layout_marginTop="32dp"
			/>

	<NumberPicker
			android:id="@+id/numberPicker_age_choice"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/textView2"
			/>

	<TextView
			android:text="@string/pl_confirm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/nickname_dialog_confirm"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginEnd="8dp"
			app:layout_constraintTop_toTopOf="@+id/nickname_dialog_cancel"
			app:layout_constraintBottom_toBottomOf="@+id/nickname_dialog_cancel"
			/>

	<TextView
			android:text="@string/pl_profile_age_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/textView2"
			android:layout_marginTop="32dp"
			app:layout_constraintTop_toTopOf="parent"
			android:textSize="18sp"
			android:textStyle="bold"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="32dp"
			/>

</androidx.constraintlayout.widget.ConstraintLayout>